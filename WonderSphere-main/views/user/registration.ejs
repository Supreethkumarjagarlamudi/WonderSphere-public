<% layout("/layouts/boilerplate") %>
<body>
    <form action="/registration" method="post" class="newform needs-validation" novalidate>
        <div class="newContainer">
            <h3>Registration</h3>
            <label for="userName">Username: </label>
            <input type="text" id="userName" placeholder="please Enter Username" name="username" class="newInp form-control" required>
            <div class="valid-feedback">
                looks good
            </div>
            <br>
            <label for="email">Email: </label>
            <input type="email" id="email" placeholder="please Enter Valid Email" name="email" class="newInp form-control" required>
            <br>
            <label for="password">Password: </label>
            <input type="password" id="password" placeholder="please Enter Password" name="password" class="newInp form-control" required>
            <br>
            <div class="addCon">
                <button type="submit" class="addbtn">Register</button>
            </div>
        </div>
    </form>
</body>