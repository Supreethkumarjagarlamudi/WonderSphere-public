<% layout("/layouts/boilerplate") %>
<body>
    <form action="/listings/" method="post" class="newform needs-validation" novalidate enctype="multipart/form-data">
        <div class="newContainer">
            <h3>New Listing details</h3>
            <label for="title">Title: </label>
            <input type="text" id="title" placeholder="please Enter title" name="listings[title]" class="newInp form-control" required>
            <div class="valid-feedback">
                looks good
            </div>
            <div class="invalid-feedback">
                Please Fill the title
            </div>
            <br>
            <label for="description">Description: </label>
            <textarea type="text" id="description" placeholder="please Enter description" name="listings[description]" rows="2" class="form-control" required></textarea>
            <div class="invalid-feedback">
                Please Fill the description
            </div>
            <br>
            <label for="Image">Image: </label>
            <input type="file" id="Image" name="listings[image]" class="newInp form-control">
            <br>
            <div class="priLoc">
                <div class="pri">
                    <label for="price">Price: </label>
                    <input type="string" id="price" placeholder="please Enter price" name="listings[price]" class="newInp form-control" required>
                    <div class="invalid-feedback">
                        Please Fill the price
                    </div>
                </div>
                <br>
                <div class="loc">
                    <label for="location">Location: </label>
                    <input type="text" id="location" placeholder="please Enter location" name="listings[location]" class="newInp form-control" required>
                    <div class="invalid-feedback">
                        Please Fill the location
                    </div>
                </div>
            </div>
            <br>
            <label for="country">Country: </label>
            <input type="text" id="country" placeholder="please Enter Country" name="listings[country]" class="newInp form-control" required>
            <div class="invalid-feedback">
                Please Fill the Country
            </div>
            <br>
            <div class="addCon">
                <button type="submit" class="addbtn">Add</button>
            </div>
        </div>
    </form>
</body>